{
  "compilerOptions": {
    "target": "es2016",
    "moduleDetection": "auto",
    "module": "Node16",
    "rootDir": "./src",
    "moduleResolution": "node16",
    "typeRoots": ["./src/@types", "node_modules/@types"],
    "declaration": true,
    "outDir": "./dist",
    "removeComments": true,
    "newLine": "lf",
    "noEmitOnError": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
