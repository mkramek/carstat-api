{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "moduleResolution": "node10",
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "lib": ["esnext"],
    "noEmit": true,
    "maxNodeModuleJsDepth": 1,
    "removeComments": false,
    "typeRoots": ["./node_modules/@types", "./src/types"]
  }
}
